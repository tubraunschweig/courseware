<h1 class="video-header">{{videoTitle}}</h1>
<div class="video-wrapper {{aspect}}">
{{#url}}
    <iframe src="{{.}}" scrolling="no" allowfullscreen></iframe>
{{/url}}
{{#opencastVideo}}
    <input type="hidden" id="opencast-video-id" value="{{opencastVideo}}">
    <iframe src="" scrolling="no" allowfullscreen></iframe>
{{/opencastVideo}}
{{^url}}
    {{^opencastVideo}}
        <video width="100%" {{webvideosettings}}>
            {{#webvideo}}
                <source src="{{src}}" type="video/{{type}}" media="{{media}}" >
            {{/webvideo}}
        </video>
        {{^webvideo}}
            {{#i18n}}Es wurde noch kein Video eingetragen.{{/i18n}}
        {{/webvideo}}
    {{/opencastVideo}}
{{/url}}
</div>
